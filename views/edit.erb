<h1>Edit Student Information</h1>

<form action='/students/<%= @student.id %>' method='post'>
 <label>
   First name:
   <input type="text" name="first_name" value="<%=@student.first_name%>">
 </label>

 <label>
  Last name:
  <input type="text" name="last_name" value="<%=@student.last_name%>">
</label>

<label>
  Age:
  <input type="number" name="age" value="<%=@student.age%>">
</label>

<label>
  House:
  <select id="house_drop" name="house">
    <option 
      <%= "selected" if @student.house_name == "Gryffindor" %>
    value="Gryffindor">Gryffindor</option>    
    <option
      <%= "selected" if @student.house_name == "Slytherin" %>
     value="Slytherin">Slytherin</option>    
    <option 
      <%= "selected" if @student.house_name == "Hufflepuff" %>
    value="Hufflepuff">Hufflepuff</option>    
    <option 
      <%= "selected" if @student.house_name == "Ravenclaw" %>
    value="Ravenclaw">Ravenclaw</option>    
  </select>

  <input type="submit" value="Update Information">

</label>

</form>